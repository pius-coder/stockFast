// Schéma Base de Données DropInDrop
// PostgreSQL avec Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// MODÈLES D'AUTHENTIFICATION (BetterAuth)
// ============================================================================

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  role          UserRole  @default(VENDOR)

  sessions      Session[]
  accounts      Account[]

  // Relations stockFast
  createdProducts      Product[]       @relation("ProductCreator")
  sales                Sale[]          @relation("SaleSeller")
  stockMovements       StockMovement[] @relation("StockMovementPerformer")
  auditLogs            AuditLog[]
  acknowledgedAlerts   StockAlert[]    @relation("StockAlertAcknowledger")

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// ============================================================================
// MODÈLES MÉTIER STOCKFAST
// ============================================================================

model Product {
  id             String   @id @default(cuid())
  name           String
  brand          String
  model          String
  purchasePrice  Decimal  @db.Decimal(10, 2)
  sellingPrice   Decimal  @db.Decimal(10, 2)
  imei           String   @unique
  availableStock Int      @default(0)
  minStockLevel  Int      @default(5)
  description    String?
  images         Json     @default("[]")
  category       Category @default(PHONE)
  status         ProductStatus @default(ACTIVE)
  createdBy      String
  updatedBy      String?

  // Relations
  creator        User     @relation("ProductCreator", fields: [createdBy], references: [id])
  qrCode         QRCode?
  sales          Sale[]
  stockMovements StockMovement[]
  alerts         StockAlert[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}

model QRCode {
  id         String   @id @default(cuid())
  productId  String   @unique
  code       String   @unique
  imageUrl   String?
  imageData  String?
  generatedBy String
  isActive   Boolean  @default(true)
  generatedAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("qrcodes")
}

model Sale {
  id            String      @id @default(cuid())
  productId     String
  quantity      Int
  unitPrice     Decimal     @db.Decimal(10, 2)
  totalAmount   Decimal     @db.Decimal(10, 2)
  paymentMethod PaymentMethod
  customerName  String?
  customerPhone String?
  receiptNumber String      @unique
  soldBy        String
  soldAt        DateTime    @default(now())

  product Product @relation(fields: [productId], references: [id])
  seller  User    @relation("SaleSeller", fields: [soldBy], references: [id])

  @@map("sales")
}

model StockMovement {
  id             String          @id @default(cuid())
  productId      String
  type           MovementType
  quantity       Int
  previousStock  Int
  newStock       Int
  reason         String?
  notes          String?
  performedBy    String
  referenceId    String?
  createdAt      DateTime        @default(now())

  product   Product @relation(fields: [productId], references: [id])
  performer User    @relation("StockMovementPerformer", fields: [performedBy], references: [id])

  @@map("stock_movements")
}

model StockAlert {
  id             String       @id @default(cuid())
  productId      String
  type           AlertType
  threshold      Int
  currentStock   Int
  isActive       Boolean      @default(true)
  notifiedAt     DateTime?
  acknowledgedAt DateTime?
  acknowledgedBy String?
  createdAt      DateTime     @default(now())

  product       Product @relation(fields: [productId], references: [id])
  acknowledger  User?   @relation("StockAlertAcknowledger", fields: [acknowledgedBy], references: [id])

  @@map("stock_alerts")
}

model AuditLog {
  id         String    @id @default(cuid())
  userId     String
  action     String
  entity     String
  entityId   String
  changes    Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

// ============================================================================
// ÉNUMÉRATIONS
// ============================================================================

enum UserRole {
  ADMIN        @map("admin")
  VENDOR       @map("vendor")
  STOCK_MANAGER @map("stock_manager")
}

enum Category {
  PHONE       @map("phone")
  ACCESSORY   @map("accessory")
  COMPONENT   @map("component")
}

enum ProductStatus {
  ACTIVE       @map("active")
  INACTIVE     @map("inactive")
  DISCONTINUED @map("discontinued")
}

enum MovementType {
  IN          @map("in")
  OUT         @map("out")
  ADJUSTMENT  @map("adjustment")
  SALE        @map("sale")
  PURCHASE    @map("purchase")
  RETURN      @map("return")
  DAMAGE      @map("damage")
}

enum AlertType {
  LOW_STOCK      @map("low_stock")
  OUT_OF_STOCK   @map("out_of_stock")
  EXPIRY_SOON    @map("expiry_soon")
}

enum PaymentMethod {
  CASH        @map("cash")
  CARD        @map("card")
  MOBILE_MONEY @map("mobile_money")
  BANK_TRANSFER @map("bank_transfer")
}
